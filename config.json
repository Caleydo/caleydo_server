{
  "dir": "./",
  "pluginDirs": [
    "${dir}plugins/",
    "${dir}static/"
  ],

  "dataDir": "${dir}/_data",
  "use_reloader": false,
  "multithreaded": true,

  "debug": true,
  "nocache": true,

  "bower_components": "libs/bower_components",

  "port": 9000,
  "address": "0.0.0.0",
  "secret_key": "VERY_SECRET_STUFF_T0IB84wlQrdMH8RVT28w",
  "max_file_size": 33554432,

  "disable": {
    "plugins": [],
    "extensions": []
  },
  "logging": {
    "version": 1,
    "formatters": {
      "simple": {
        "format": "%(asctime)s %(levelname)s %(name)s: %(message)s",
        "datefmt": "%H:%M:%S"
      },
      "line": {
        "format": "%(asctime)s %(levelname)s %(name)s(%(pathname)s:%(lineno)s): %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "DEBUG",
        "formatter": "line",
        "filename": "caleydo.log",
        "when": "midnight",
        "backupCount": 7
      }
    },
    "loggers": {
      "geventwebsocket.handler": {
        "level": "WARN",
        "handlers": [
          "console",
          "file"
        ]
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "file"
      ]
    }
  }
}
